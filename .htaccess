RewriteEngine On
RewriteBase /

# 1. Si el usuario pide algo.html, quitarle el .html visualmente
RewriteCond %{THE_REQUEST} \s/+(.+)\.html [NC]
RewriteRule ^(.+)\.html$ /$1 [R=301,L]

# 2. Si el usuario pide la ruta limpia, mostrarle el archivo .html internamente
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^/]+)/?$ $1.html [L]