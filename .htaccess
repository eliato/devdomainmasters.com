RewriteEngine On
RewriteBase /

# 1. Forzar HTTPS (Método estándar compatible con la mayoría de hostings)
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 2. Forzar WWW (Solo si no la tiene ya)
RewriteCond %{HTTP_HOST} !^www\. [NC]
RewriteRule ^ https://www.devdomainmasters.com%{REQUEST_URI} [L,R=301]

# 3. Eliminar .html de la URL (Redirección externa)
RewriteCond %{THE_REQUEST} \s/+(.+)\.html [NC]
RewriteRule ^(.+)\.html$ /$1 [R=301,L,NE]

# 4. Servir el archivo .html (Mapeo interno)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^/]+)/?$ $1.html [L]